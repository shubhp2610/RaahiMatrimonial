@using System.Web.UI.WebControls
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="Raahi Matrimonial" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!--====== Title ======-->
    <title>@ViewBag.title</title>

    <link rel="shortcut icon"
          href="~/assets/images/favicon.svg"
          type="image/svg" />

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/lineicons.css" />
    <link rel="stylesheet" href="~/assets/scss/starter.css" />
    <link rel="stylesheet" href="~/assets/scss/navbars/navbar-06.css" />
    <link rel="stylesheet" href="~/assets/scss/headers/header-01.css" />
    <link rel="stylesheet" href="~/assets/scss/cards/card-01.css" />
    <link rel="stylesheet" href="~/assets/scss/call-to-action/call-to-action-01.css" />
    <link rel="stylesheet" href="~/assets/scss/contact/contact-01.css" />
    <link rel="stylesheet" href="~/assets/scss/footers/footer-02.css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>

<body>
<section class="navbar-area navbar-six shadow-sm">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="javascript:void(0)">
                            <img src="~/assets/images/logo.png" alt="Logo" class="nav-logo" />
                        </a>

                        <button class="navbar-toggler"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSix"
                                aria-controls="navbarSix"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSix">
                            <ul class="navbar-nav ms-auto">

                                <li class="nav-item">
	                                
                                    @{
	                                    if (ViewBag.title == "Raahi Matrimonial")
	                                    {
		                                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "active" });

	                                    }
	                                    else
	                                    {
		                                    @Html.ActionLink("Home", "Index", "Home");
	                                    }
                                    }
	                                </li>
                                <li class="nav-item">

                                    @{
                                        if (ViewBag.title == "About US - Raahi Matrimonial")
                                        {
                                            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "active" });

                                        }
                                        else
                                        {
                                            @Html.ActionLink("About", "About", "Home")
                                        }
                                    }
                                <li class="nav-item">
	                                @Html.ActionLink("Login", "About", "Home")
                                </li>
                                <li class="nav-item">
                                    @{
                                        if (ViewBag.title == "Success Stories - Raahi Matrimonial")
                                        {
                                            @Html.ActionLink("Success Stories", "SuccessStories", "Home", new { area = "" }, new { @class = "active" });

                                        }
                                        else
                                        {
                                            @Html.ActionLink("Success Stories", "SuccessStories", "Home")
                                        }
                                    }

                                </li>
                                <li class="nav-item">
	                                @{
		                                if (ViewBag.title == "Contact US - Raahi Matrimonial")
		                                {
			                                @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "active" });

		                                }
		                                else
		                                {
			                                @Html.ActionLink("Contact", "Contact", "Home")
		                                }
	                                }
                                </li>
                            </ul>
                        </div>


                    </nav>
                    <!-- navbar -->
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </section>
    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
	<div>
    <main role="main">
        @RenderBody()
    </main>
    </div>

    <footer class="footer-area footer-two">
