                        <!-- footer link -->
                    </div>
	                    <div class="col-6 ">
                            <div class="footer-link">
                                <!--<h6 class="footer-title">Services</h6>-->
                                <ul>
                                    <li>@Html.ActionLink("Login", "About", "Home", new { area = "" }, new { @class = "footer-link" })</li>
                                    <li>@Html.ActionLink("Register", "Index", "Home", new { area = "" }, new { @class = "footer-link" })</li>
                                </ul>
                            </div>
		                    <!-- footer link -->
	                    </div>
                    </div>
                    
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- footer widget -->

        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright text-center">
                            <p class="text">Copyright © 2022 UIdeck. All Rights Reserved</p>
                        </div>
                        <!-- copyright -->
                    </div>
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- footer copyright -->
    </footer>


    <!--====== NAVBAR SIX PART ENDS ======-->
    <!--====== Bootstrap js ======-->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <script>
        //===== close navbar-collapse when a  clicked
        let navbarTogglerSix = document.querySelector(
            ".navbar-six .navbar-toggler"
        );
        navbarTogglerSix.addEventListener("click", function () {
            navbarTogglerSix.classList.toggle("active");
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
